<body>

  <button onclick="playSegment()">â–¶ Click to Watch</button>

  <div id="videoModal">
    <div style="position: relative; width: 100%; max-width: 600px;">
      <iframe id="vimeoPlayer" src="" allow="autoplay; fullscreen" allowfullscreen></iframe>
      <button id="closeBtn" onclick="closeModal()">&times;</button>
    </div>
  </div>

  <script src="https://player.vimeo.com/api/player.js"></script>
  <script>
    const modal = document.getElementById("videoModal");
    const iframe = document.getElementById("vimeoPlayer");
    let player;

    function playSegment() {
      iframe.src = "https://player.vimeo.com/video/1073251548#t=2m49s";
      modal.style.display = "flex";

      player = new Vimeo.Player(iframe);

      player.setCurrentTime(169); // 2:49 in seconds
      player.play();

      const endTime = 194; // 3:14 in seconds

      const interval = setInterval(() => {
        player.getCurrentTime().then(seconds => {
          if (seconds >= endTime) {
            clearInterval(interval);
            closeModal();
          }
        });
      }, 500);
    }

    function closeModal() {
      modal.style.display = "none";
      player.unload();
    }
  </script>
