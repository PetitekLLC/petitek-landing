<!-- THEN Your Single <script> -->
<script>
function playAlert(step) {
  const audio = document.getElementById(`triggerAudio${step}`);
  const light = document.getElementById(`light${step}`);

  if (audio && light) {
    audio.volume = 1.0;
    audio.currentTime = 0;

    // Start flashing effect on the step indicator
    light.classList.remove('flash');      // Reset animation if already applied
    void light.offsetWidth;               // Force reflow to restart animation
    light.classList.add('flash');         // Apply animation class

    // Play audio
    audio.play().catch(err => console.error(`Audio play error (Step ${step}):`, err));

    // Remove flashing when audio ends
    audio.onended = () => {
      light.classList.remove('flash');    // Clean up after animation completes
    };
  } else {
    console.warn(`Missing audio or light element for step ${step}`);
  }
}

document.addEventListener('DOMContentLoaded', () => {

  // Turntable Image Carousel
  const images = document.querySelectorAll('#turntableCarousel .turn-img');
  let index = 0;
  function showNextImage() {
    images.forEach((img, i) => {
      img.classList.toggle('active', i === index);
    });
    index = (index + 1) % images.length;
  }
  showNextImage();
  setInterval(showNextImage, 3000);

  // Email form submission
  function showThankYou() {
    const input = document.getElementById('emailInput');
    const message = document.getElementById('thankYouMessage');
    const submitButton = document.getElementById('submitButton');
    const buttonText = document.getElementById('buttonText');
    const spinner = document.getElementById('spinner');

    if (!buttonText || !spinner) {
      console.error("❌ Required buttonText or spinner not found.");
      return;
    }

    if (input.checkValidity()) {
      buttonText.style.display = 'none';
      spinner.style.display = 'block';
      submitButton.disabled = true;

      const formData = new FormData();
      formData.append('email', input.value);

      fetch("https://script.google.com/macros/s/AKfycbwr_wDsxU8MrEkOv2zKGyhHiXi5WR33_rc-0wAK-wbyWT_Yp_IsozHPhbh1OqieC38sbQ/exec", {
        method: "POST",
        body: formData
      })
      .then(response => response.text())
      .then(result => {
        spinner.style.display = 'none';
        submitButton.disabled = false;
        buttonText.style.display = 'block';
        message.style.display = 'block';
        input.value = '';
        setTimeout(() => {
          message.style.display = 'none';
        }, 3000);
      })
      .catch(error => {
        console.error("❌ Error submitting form:", error);
        spinner.style.display = 'none';
        submitButton.disabled = false;
        buttonText.style.display = '▶';
        alert("Something went wrong. Please try again.");
      });
    }
  }
  window.showThankYou = showThankYou;

  // Floating Buy Button
  const floatBtn = document.querySelector('.floating-buy-button');
  if (floatBtn) {
    window.addEventListener('scroll', () => {
      floatBtn.classList.toggle('show', window.scrollY > 300);
    });
  }

  // Fade-In Animation
  const fadeEls = document.querySelectorAll('.fade-in');
  const fadeObserver = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      entry.target.classList.toggle('visible', entry.isIntersecting);
    });
  }, { threshold: 0.1 });
  fadeEls.forEach(el => fadeObserver.observe(el));

  // Hide Navbar on Scroll
  const navbar = document.getElementById('navbar');
  let lastScrollTop = 0;
  window.addEventListener('scroll', () => {
    const scrollTop = window.scrollY || document.documentElement.scrollTop;
    navbar.style.top = scrollTop > lastScrollTop ? "-70px" : "0";
    lastScrollTop = scrollTop;
  });

  // Dropdown Menu
  const menu = document.getElementById('dropdownMenu');
  const hamburger = document.querySelector('.hamburger');
  if (hamburger && menu) {
    hamburger.addEventListener('click', () => {
      menu.style.display = (menu.style.display === 'block') ? 'none' : 'block';
    });
    document.addEventListener('click', function(event) {
      if (!menu.contains(event.target) && !hamburger.contains(event.target)) {
        menu.style.display = 'none';
      }
    });
  }

  // Video Autoplay + Unmute
  const videos = [
    { id: 'chatrboxVideo1', overlayId: 'unmuteOverlay1' },
    { id: 'chatrboxVideo2', overlayId: 'unmuteOverlay2' },
    { id: 'chatrboxVideo3', overlayId: 'unmuteOverlay3' },
    { id: 'chatrboxVideo4', overlayId: 'unmuteOverlay4' }
  ];
  let currentlyPlaying = null;

  function initVideo({ id, overlayId }) {
    const video = document.getElementById(id);
    const overlay = document.getElementById(overlayId);
    if (!video || !overlay) return;

    video.preload = 'auto';
    video.muted = true;

    const videoObserver = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          videos.forEach(({ id: vid }) => {
            const v = document.getElementById(vid);
            if (v && v !== video && !v.paused) v.pause();
          });
          currentlyPlaying = video;
          video.play();
        } else {
          if (video === currentlyPlaying) video.pause();
        }
      });
    }, { threshold: 0.5 });

    videoObserver.observe(video);

    video.addEventListener('ended', () => {
      video.currentTime = 0;
      overlay.style.display = 'block';
      video.muted = true;
    });

    overlay.addEventListener('click', () => {
      video.pause();
      video.currentTime = 0;
      video.muted = false;
      overlay.style.display = 'none';
      video.play();
    });
  }

  videos.forEach(initVideo);

}); // End of DOMContentLoaded

</script>


</body>

</html>
